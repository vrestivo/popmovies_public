<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/material_card_space"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:elevation="2dp"

    >

<RelativeLayout
    android:id="@+id/review_list_item_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/material_card_padding"
    >

    <!--todo delete hard coded text-->


    <at.blogc.android.views.ExpandableTextView
        android:id="@+id/expandable_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:scrollbars="vertical"
        android:nestedScrollingEnabled="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="TESTING"
        app:animation_duration="200"
        android:layout_marginEnd="@dimen/material_16dp_keyline"
        />

    <!-- Optional parameter animation_duration: sets the duration of the expand animation -->

    <ImageButton
        android:id="@+id/button_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/arrow_down_float"
        android:layout_alignEnd="@id/expandable_text_view"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        />


</RelativeLayout>

</android.support.v7.widget.CardView>