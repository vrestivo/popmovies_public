<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/material_card_space"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:elevation="@dimen/cardview_default_elevation"
    android:paddingStart="@dimen/material_24dp_keyline"
    android:paddingEnd="@dimen/material_24dp_keyline"
    >

<RelativeLayout
    android:id="@+id/review_list_item_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/material_card_padding"
    >

    <!--todo delete hard coded text-->


    <at.blogc.android.views.ExpandableTextView
        android:id="@+id/expandable_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/button_toggle"
        android:clickable="true"
        android:ellipsize="end"
        android:maxLines="@integer/review_item_max_lines"
        android:scrollbars="vertical"
        app:animation_duration="@integer/anim_duration" />

    <!-- Optional parameter animation_duration: sets the duration of the expand animation -->

    <ImageButton
        android:id="@+id/button_toggle"
        android:layout_width="@dimen/material_drop_down_icon_size"
        android:layout_height="@dimen/material_drop_down_icon_size"
        android:padding="@dimen/material_drop_down_icon_padding"
        android:background="@drawable/ic_keyboard_arrow_down_black_24px"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"

        />



</RelativeLayout>

</android.support.v7.widget.CardView>