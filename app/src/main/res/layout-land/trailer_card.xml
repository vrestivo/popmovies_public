<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/trailer_card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/material_card_padding"
    app:cardCornerRadius="@dimen/material_card_corner_radius"
    android:layout_marginBottom="@dimen/material_card_space"
    android:layout_margin="@dimen/material_card_space"
    >

    <ImageView
        android:id="@+id/trailer_card_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/trailer_card_t_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.v7.widget.CardView>