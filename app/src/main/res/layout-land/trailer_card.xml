<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/trailer_card_view"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/trailer_card_height"
    app:cardCornerRadius="@dimen/material_card_corner_radius"
    android:layout_margin="@dimen/material_card_space"
    android:elevation="@dimen/material_card_resting_elevation"
    >

    <ImageView
        android:id="@+id/trailer_card_thumbnail"
        android:layout_width="@dimen/trailer_card_width"
        android:layout_height="@dimen/trailer_card_height"
        android:padding="@dimen/material_card_padding"
        />

</android.support.v7.widget.CardView>